<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
  <link rel="icon" href="../images/Logo 2.png" type="image/x-icon">
  <link rel="stylesheet" href="../styles/cadastroObra.css"  />
  
  <title>Cadastro de Obra</title>

</head>
<body>
  <div class="navbar">
    <div class="navbar-logo">
      <img src="../images/Logo 2.png" alt="Logo" width="80" height="40" />
    </div>
    <div class="navbar-button">
      <div class="button-container">
        <button id="centralButton" class="green-button">Central do Administrador</button>
      </div>
    </div>
  </div>
  <div class="container">
    
    <div class="form-title">Cadastro de Obra</div>

    <form id="form" class="form" action="/obraCadastrada" method="post">
    <!-- Dropdown para selecionar o cliente -->
    <div class="form-content">
      <label for="cliente">Cliente</label>
      <div class="custom-select">
      <select id="cliente" name="cliente" required>        
        <option value="" disabled selected>Selecionar</option>
        <% clientes.forEach(function(cliente) { %>
        <option value="<%= cliente.idCliente %>"><%= cliente.nomeCliente %></option>
        <% }); %>
      </select>
      </div>
    </div>

      <div class="form-content">
        <label for="endereco">Endereço</label>
        <input
          type="text"
          id="endereco"
          name="endereco"
          placeholder="  Endereço completo da obra"
        />
      </div>

      <div class="form-content">
        <label for="cidadeObra">Cidade</label>
        <input
          type="text"
          id="cidade"
          name="cidade"
          placeholder="  Cidade da obra"
        />
      </div>

      <div class="form-content">
        <label for="terreno">Tamanho de terreno em m²</label>
        <input
          type="text"
          id="terreno"
          name="terreno"
          placeholder="  0m²"
        />
      </div>

      <div class="form-content">
        <label for="data">Data de início</label>
        <input
          type="date"
          id="data"
          name="data"
          placeholder="  00 / 00 / 0000"
        />
      </div>

      <div class="form-content">
        <label for="nComodos">Quantidade de cômodos</label>
        <input
          type="number"
          id="nComodos"
          name="nComodos"
          placeholder="  "
        />
      </div>

      <div class="form-content">
        <label for="garagem">Garagem</label>
        <div class="radio-buttons">
          <div class="radio-option">
            <input
              type="radio"
              id="sim"
              name="garagem"
              value=true
            />
            <label for="sim">Sim</label>
          </div>
      
          <div class="radio-option">
            <input
              type="radio"
              id="nao"
              name="garagem"
              value=false
            />
            <label for="nao">Não</label>
          </div>
        </div>
      </div>
      
    </div>
    
    <button type="submit" class="green-button">Cadastrar obra</button>
    <br /><br />
  </form>
 </body>
 <script src="../scripts/cadastroObra.js"></script>
</html>
